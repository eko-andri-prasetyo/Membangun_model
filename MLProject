name: creditscoring-msml

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      data_path: {type: path, default: "preprocessing/creditscoring_preprocessing/creditscoring_preprocessed.csv"}
      target_col: {type: str, default: "target"}
      test_size: {type: float, default: 0.2}
      random_state: {type: int, default: 42}
      n_estimators: {type: int, default: 300}
      max_depth: {type: int, default: null}
    command: >
      python modelling.py
      --data_path {data_path}
      --target_col {target_col}
      --test_size {test_size}
      --random_state {random_state}
      --n_estimators {n_estimators}
      --max_depth {max_depth}
